---
layout: null
sitemap: false
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {% for post in site.posts %}
    <url>
      <loc>{{ site.url }}{{ post.url }}</loc>
      <lastmod>{{ post.last_modified_at | default: post.date | date_to_xmlschema }}</lastmod>
    </url>
  {% endfor %}
  
  {% assign important_pages = "about,archives,categories,tags" | split: "," %}
  {% for p in important_pages %}
    {% assign page_object = site.pages | where: "name", p | first %}
    {% if page_object %}
      <url>
        <loc>{{ site.url }}{{ page_object.url }}</loc>
        <lastmod>{{ page_object.last_modified_at | default: site.time | date_to_xmlschema }}</lastmod>
      </url>
    {% endif %}
  {% endfor %}
</urlset>